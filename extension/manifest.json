{
  "manifest_version": 2,
  "name": "Imitation",
  "version": "0.3.0",
  "description": "Add flashcards from any webpage â€” highlight, study, and review",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "notifications",
    "alarms",
    "https://dbmxbfeuxflznukpuvnf.supabase.co/*",
    "https://imitation-broken-dawn-9001.fly.dev/*"
  ],
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Imitation",
    "default_popup": "popup/popup.html"
  },
  "sidebar_action": {
    "default_title": "Imitation",
    "default_panel": "sidebar/sidebar.html",
    "default_icon": "icons/icon-48.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "quick-add": {
      "suggested_key": {
        "default": "Alt+Shift+F"
      },
      "description": "Quick-add a flashcard from the current page"
    }
  }
}
